Dashboard
  template(v-slot:content)
    .container
      .page__title
        a(href="/organizations")
          AIcon(type="arrow-left", alt="")
          | Organizations Detail
      .org-detail
        .org-detail__header
          .org-detail__avatar
            svg(:data-jdenticon-value="org.address", width="50", height="50")
          .org-detail__identity
            p.org-detail__name
              | {{ org.name }}
            p.org-detail__id
              | {{ org.address }}
              span.has-tooltip
                .tooltip Copied!
                AIcon.tail-icon.arascan-icon--gray(id="icon-clipboard", type="clipboard", alt="", @click.native="copyToClipboard")
        .org-detail__body
          .row
            .col--title Description
            .col--content {{ org.description }}
          .row
            .col--title Email
            .col--content {{ org.email }}
          .row
            .col--title Website
            .col--content {{ org.website }}
          .row
            .col--title Balance
            .col--content {{ org.balance }}
          .row
            .col--title Admin
            .col--content
              .user
                svg(:data-jdenticon-value="org.admin._id", width="50", height="50")
                | {{ org.admin.identity != undefined ? org.admin.identity.display : org.admin._id.shorty() }}
          .row.row--no-border
            .col--title Members
            .col--content.members
              .user(v-for="(member, index) in org.members", :key="index")
                svg(:data-jdenticon-value="member._id", width="50", height="50")
                | {{ member.identity != undefined ? member.identity.display : member._id.shorty() }}
    script(src="https://cdn.jsdelivr.net/npm/jdenticon@3.1.1/dist/jdenticon.min.js", integrity="sha384-l0/0sn63N3mskDgRYJZA6Mogihu0VY3CusdLMiwpJ9LFPklOARUcOiWEIGGmFELx", crossorigin="anonymous")
    script. 
      setTimeout(function(){ jdenticon(); }, 2000);