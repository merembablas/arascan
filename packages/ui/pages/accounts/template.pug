Dashboard
  template(v-slot:content)
    .container
      .page__title
        nuxt-link(to="/")
          AIcon(type="arrow-left", alt="")
          | Accounts
      .org-table
        .org-table__header
          AInput.prepend-icon.org-table__search
            AIcon(type="magnify", alt="")
            form(v-on:submit.prevent="donothing")
              input(type="text", name="search", placeholder="Search accounts...", v-model="search", v-on:keyup="searchAccounts")
        .tbody.trow(v-for="(account, index) in accounts", :key="index", :class="{'trow--colored': index % 2}")
          .tcol
            .org-detail
              .org-detail__header
                .org-detail__avatar
                  svg(:data-jdenticon-value="account.address", width="50", height="50")
                .org-detail__identity 
                  p.org-detail__name
                    a(:href="account.link") 
                      | {{ account.name }}
                  p.org-detail__id
                    | {{ account.balance }} ARA
    script(src="https://cdn.jsdelivr.net/npm/jdenticon@3.1.1/dist/jdenticon.min.js", integrity="sha384-l0/0sn63N3mskDgRYJZA6Mogihu0VY3CusdLMiwpJ9LFPklOARUcOiWEIGGmFELx", crossorigin="anonymous")
    script. 
      setTimeout(function(){ jdenticon(); }, 2000);
      
